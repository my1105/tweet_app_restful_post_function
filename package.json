    "jest": "^29.7.0",
    "jest-puppeteer": "^11.0.0",
    "prettier": "^3.5.1",
    "puppeteer": "^24.2.1",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.1"
